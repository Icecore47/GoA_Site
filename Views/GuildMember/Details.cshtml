        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guild_Rank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guild_Rank)
        </dd>
        <dt class="col-sm-2">
