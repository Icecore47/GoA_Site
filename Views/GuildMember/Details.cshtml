    <h1>DD Roaster</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Character Name
                </th>
                <th>
                    DPS
                </th>
                <th>
                    Damage Type
                </th>
                <th>
                    Class
                </th>
                <th>
                    Parse Link
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DDs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CharacterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DPS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Parse)
                    </td>
                </tr>
            }
        </tbody>
    </table>


