@model GoA_Site.Models.Damage

@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.InGameName</h1>

<h4>@Model.CharacterName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DPS" class="control-label"></label>
                <input asp-for="DPS" class="form-control" />
                <span asp-validation-for="DPS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Parse" class="control-label"></label>
                <input asp-for="Parse" class="form-control" />
                <span asp-validation-for="Parse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
